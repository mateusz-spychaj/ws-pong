{
  "name": "multi-pong",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "npm run build && node dist/server.cjs",
    "dev": "npm run build:server && concurrently \"vite --host\" \"tsx watch src/server.ts\"",
    "build": "npm run build:server && vite build --mode production",
    "build:server": "esbuild src/server.ts --bundle --platform=node --format=cjs --minify --outfile=dist/server.cjs",
    "build:prod": "npm run build:server && vite build --mode production",
    "prod": "NODE_ENV=production node dist/server.cjs",
    "test": "tsx --test tests/*.test.ts",
    "test:watch": "tsx --test --watch tests/*.test.ts",
    "test:server": "tsx --test tests/server.test.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "qrcode": "^1.5.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.2.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "happy-dom": "^20.6.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^5.0.11"
  }
}
