{
  "name": "multi-pong",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "dev": "npm run build:server && concurrently \"vite\" \"tsx watch server.ts\"",
    "build": "npm run build:server && vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:prod": "npm run build",
    "prod": "npm run build && NODE_ENV=production node dist/server.js",
    "test": "tsx --test tests/*.test.ts",
    "test:watch": "tsx --test --watch tests/*.test.ts",
    "test:server": "tsx --test tests/server.test.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "qrcode": "^1.5.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-html": "^3.2.2"
  }
}
